<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectsProject.Pages.ImagePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="BackgroundColor" Value="#d0cccc"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Padding="30" Spacing="30">
        <Label Style="{StaticResource labelStyle}" Text="{Binding Name}"/>
        <Image Source="{Binding PathImage}" WidthRequest="700" HeightRequest="400"/>
    </StackLayout>
</ContentPage>